<%

@questions = ['Round Trip Travel Time',
'Repeat Trips',
'Have Car?',
'Passenger or a driver?',
'Are pets ok?',
'Do you speed? ',
'Do you smoke? ',
'Food and Drink ok? ',
'Radio or Music?',
'Number of seats available/needed',
'Are you on facebook?',
'User Feedback']
%>


<div class="container">
	<div class="col-md-12">
		<h1>
			Join AVLRide
		</h1>
	</div>
	<div class="">
		<form class="form signup-form col-md-6 col-md-offset-3">
			<p>
				<label for="first name">First Name</label>
				<input type="text" name="first name"/>
			</p>
			<p>
				<label for="last name">Last Name</label>
				<input type="text" name="last name" />
			</p>
			<p>
				<label for="last name">Email Address</label>
				<input type="email" name="user email" />
			</p>
			<p class="chosen-field">
				<label for="last name">Home Neighborhood</label>
				<select name='neighborhood_home_home' id='neighborhood_home'>
					<% for n in @neighborhood_home_list %>
						<option value='<%= n %>'><%= n %></option>
					<% end
					%>
				</select>
				<div id='neighborhood_home_other'  style="display: none">
					<label>Other:</label>
					<input type="text" name="home location" />
				</div>
			</p>
			<p class="chosen-field">
				<label for="last name">Work Neighborhood</label>
				<select name='neighborhood_home_work' id='neighborhood_work'>
					<% for n in @neighborhood_home_list %>
						<option value='<%= n %>'><%= n %></option>
					<% end %>
				</select>
				<div id='neighborhood_work_other'  style="display: none">
					<label>Other:</label>
					<input type="text" name="work location" />
				</div>
			</p>
			<p class="submit-button">
				<input type="submit" value="sign me up! &#8594;" class="btn btn-success btn-lg"/>
			</p>
		</form>
	</div>				
</div>

<div class="container">
	<div class="col-md-12">
		<h1>
			Tell us a bit more about yourself
		</h1>
	</div>
	<div class="">
		<form class="form signup-form col-md-6 col-md-offset-3">
			<div class="radio-group">
				<span>I am a:</span>
				<p>
					<label for="driver">Driver</label>
					<input type="radio" name="driver-passenger" value="driver" id="driver"/>
				</p>
				<p>
					<label for="passenger">Passenger</label>
					<input type="radio" name="driver-passenger" value="passenger" id="passenger" />
				</p>	 			
			</div>
			<div class="radio-group">
				<span>I am a:</span>
				<p>
					<label for="Male">Male</label>
					<input type="radio" name="gender" value="male" id="male"/>
				</p>
				<p>
					<label for="Female">Female</label>
					<input type="radio" name="gender" value="female" id="female"/>
				</p>				
			</div>
			<% for q in @questions %>
				<div class="radio-group">
				<span><%= q %></span>
				<p>
					<label for="<%= q %>">Yes</label>
					<input type="radio" name="<%= q %>" id="<%= q %>" value="<%= q %> yes"/>
				</p>
				<p>
					<label for="<%= q %>">No</label>
					<input type="radio" name="<%= q %>" id="<%= q %>" value="<%= q %> no"/>
				</p>				
			</div>
			<% end %>		
			<p class="submit-button">
				<input type="submit" value="next &#8594;" class="btn btn-success btn-lg"/>
			</p>
		</form>
	</div>				
</div>
<script type="text/javascript">
	$(document).ready(function(){
		$(document).on('change',"#neighborhood_home", function(){
			if($(this).val() == "Other"){
				$("#neighborhood_home_other").slideDown();
			}
			else{
				$("#neighborhood_home_other").slideUp();

			}
		});

		$(document).on('change',"#neighborhood_work", function(){
			if($(this).val() == "Other"){
				$("#neighborhood_work_other").slideDown();
			}
			else{
				$("#neighborhood_work_other").slideUp();

			}
		});

		
	});
</script>
